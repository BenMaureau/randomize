<div class="placholder-navbar" style="height:66px"></div>

<div class="container" id='bookings-container'>
  <h1>Mes réservations</h1>
  <% @my_bookings.each do |booking| %>
    <%= link_to my_booking_path(booking), class: "card-link" do %>
      <div class="card-booking">
        <div class="card-image" style="background-image: url('<%= cl_image_path booking.slot.activity.photos[0].key, height: 220, crop: :fill %>')"></div>
        <div class="my-card-div-details">
            <div class="d-flex justify-content-between">
              <h3> <%= booking.slot.activity.name %> </h3>
              <p> <%= booking.slot.activity.address %> </p>
            </div>
            <div class="d-flex justify-content-between">
            <div class="display-flex mt-3">
              <div class="display-flex-column mr-3">
                <div class="card-detail">
                  <i class="fas fa-euro-sign"></i>
                  <p>10 (par personne)</p>
                </div>
                <div class="card-detail">
                  <i class="fas fa-hourglass-start"></i>
                  <p>environ 2h</p>
                </div>
              </div>
              <div class="display-flex-column">
                <div class="card-detail">
                  <i class="fas fa-map-marker-alt"></i>
                  <p>à 7km</p>
                </div>
                <div class="card-detail">
                  <i class="fas fa-clock"></i>
                  <p>rdv à 19h30</p>
                </div>
              </div>
            </div>
            <div id="map" class="map-non-sticky"
              style="width: 200px; height: 100px"
              data-markers="<%= [{
        lat: booking.slot.activity.latitude,
        lng: booking.slot.activity.longitude,
        icon: @icon
      }].to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>
        <div class="right-chevron">
          <i class="fas fa-chevron-right"></i>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="my-tap-container" id="remove-fixed">
  <%= link_to 'Randomize!', random_path, :class => 'my-btn my-btn-primary' %>
</div>



