<h1> MAP </h1>

<div class="mapstorize" id="map-diplayed">
  <div id="map"
       style="width: 100%; height: 400px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <form action="random">
    <div class="form-group map-filters">
      <h2><label for="formControlRange">Jusqu'où irais-tu pour randomize?</label></h2>
      <input type="text" class = "hiddenAddress">
      <div class="align">
        <p>10 km</p>
        <input type="range" class="form-control-range" id="formControlRange">
        <p> 1 km</p>
      </div>
    </div>
    <div class="number-participants">
      <div class="one-participant">
        <input type="radio" id="person" name="participants" value="person" class= "one-participant"
               checked>
        <i for="person" class="fas fa-user-circle"></i>
      </div>
      <div class="two-participants">
        <input type="radio" id="people" name="participants" value="people">
        <i for= "people" class="fas fa-user-friends"></i>
      </div>
    </div>
    <input value="Suivant" class="my-btn-primary btn-extend" id="next-scroll">
  </form>

</div>

<div class="mood-form d-none" id="scrolling-action">
  <h1>ON SE LA JOUE COMMENT ?</h1>
